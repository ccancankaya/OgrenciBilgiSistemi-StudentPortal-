@using System.Threading.Tasks
@model Obs.WebUI.Models.StudentLoginViewModel
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Öğrenci bilgi sistemi,admin paneli">
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">


    <title>Login</title>
</head>
<body>
    <div class="container-fluid">
        <div class="container">
            <div class="row">
                <div class="col-lg-3"></div>
                <div class="col-lg-6">
                    <div class="card border-white shadow-lg my-4 login-card">
                        <div class="card-header text-center text-white bg-dark">
                            Giriş yapın
                        </div>
                        <div class="card-body">
                            <form asp-controller="StudentAccount" asp-action="Login" method="post" role="form">
                                <div class="form-row">
                                    <div class="col">
                                        <label class="text-dark">Öğrenci numarası</label>
                                        <input asp-for="StudentNumber" type="text" class="form-control border-dark my-3">
                                        <span asp-validation-for="StudentNumber"></span>
                                    </div>
                                </div>

                                <div class="form-row">
                                    <div class="col">
                                        <label class="text-dark my-3">Şifre</label>
                                        <input asp-for="Pssword" type="password" class="form-control border-dark">
                                        <span asp-validation-for="Pssword"></span>
                                    </div>
                                </div>
                                <div class="form-row">

                                    <div class="col-lg">
                                        <button class="btn btn-lg btn-block btn-dark text-white text-center my-3" type="submit">Giriş yap</button>
                                    </div>

                                </div>
                                <div class="form-row">
                                    <div class="col-lg">
                                        <button class="btn btn-lg btn-block btn-success text-white text-center" asp-controller="StudentAccount" asp-action="Register">Kayıt ol</button>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="col-lg">
                                        <button class="btn btn-lg btn-block btn-success text-white text-center" asp-controller="TeacherAccount" asp-action="Login">Öğretmen girişi</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>

                </div>
                <div class="col-lg-3"></div>
            </div>

        </div>
    </div>

    <script src="https://kit.fontawesome.com/552e6a457c.js"></script>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
</body>
</html>





















